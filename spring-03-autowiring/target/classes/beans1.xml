<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        https://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--自动装配 通过在xml配置文件中声明autowire属性为byName和byType-->
    <bean id="dog1" class="com.aqiang.pojo.Dog"/>
    <bean id="cat1" class="com.aqiang.pojo.Cat"/>
    <!--、
    byName根据id自动匹配Person类中setid的方法，Person类中有setDog方法，则匹配bean节点id为dog的类。
    如果不匹配则空指针异常，
    byType根据类型匹配，如果同一个类有多个bean节点注册，则保持
    -->
    <!--
        <bean id="person" class="com.aqiang.pojo.Person" autowire="byName">
              <property name="name" value="aqiang"/>
         </bean>
    -->
    <bean id="person" class="com.aqiang.pojo.Person" autowire="byType">
        <property name="name" value="aqiang"/>
    </bean>

</beans>